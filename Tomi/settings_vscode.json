{
  // Editor config
  "editor.wordWrap": "on",
  "workbench.colorTheme": "Shades of Purple (Super Dark)",
  "workbench.iconTheme": "material-icon-theme",
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "Hack Nerd Font, Consolas, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.fontWeight": "normal",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "git.enableSmartCommit": true,
  "javascript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifier": "relative",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.colorCustomizations": {
    "[Shades of Purple (Super Dark)]": {
      "statusBar.background": "#cca700",
      "statusBar.foreground": "#000000",
      "statusBar.debuggingBackground": "#e07800",
      "activityBar.foreground": "#000000",
      "activityBar.inactiveForeground": "#c9c9c9",
      "activityBar.activeBackground": "#cca700",
      "activityBarBadge.background": "#842391",
      "activityBar.activeBorder": "#000c44",
      "activityBarItem.settingsProfilesHoverForeground": "#ffffff"
    }
  },

  // prettier config
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },

  // Vim config
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.easymotionMarkerooundColor": "#020202",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },

    // """telescope""" config
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "l", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "l", "d"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["<leader>", "l", "o"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["<leader>", "u", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "t", "e"],
      "commands": ["workbench.actions.view.problems"]
    },
    {
      "before": ["<leader>", "t", "t"],
      "commands": ["workbench.action.terminal.toggleTerminal"],
      "when": ["terminal.active"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "g"],
      "commands": ["workbench.action.findInFiles"]
    },

    // Editor/Window Management config
    {
      "before": ["<leader>", "v", "s"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["<leader>", "m", "r"],
      "commands": ["workbench.action.moveActiveEditorGroupRight"]
    },
    {
      "before": ["<leader>", "m", "l"],
      "commands": ["workbench.action.moveActiveEditorGroupLeft"]
    },
    {
      "before": ["<leader>", "m", "j"],
      "commands": ["workbench.action.moveEditorLeftInGroup"]
    },
    {
      "before": ["<leader>", "m", "k"],
      "commands": ["workbench.action.moveEditorRightInGroup"]
    },
    {
      "before": ["<leader>", "e", "e"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "z", "m"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["workbench.action.closeAllEditors"]
    },
    {
      "before": ["<leader>", "c", "o"],
      "commands": ["workbench.action.closeOtherEditors"]
    },
    {
      "before": ["<leader>", "]"],
      "commands": ["editor.action.marker.nextInFiles"]
    },
    {
      "before": ["<leader>", "["],
      "commands": ["editor.action.marker.prevInFiles"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<Esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "j"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "k"],
      "after": ["$"]
    }
  ],
  "vim.leader": "<space>",

  "vim.handleKeys": {
    "<C-a>": false, // select all
    "<C-f>": false, // search word under cursor
    "<C-d>": false, // multiple cursor in word under cursor
    "<C-c>": false, // normal mode cp line
    "<C-x>": false, // normal mode cut line
    "<C-v>": false, // paste
    "<C-z>": false, // undo
    "<C-y>": false // redo
  }
}
